{
    "scope": {
        "package-name": "asadmin",
        "module-name": "asadmin",
        "source-dir": "src",
        "target-dir": "dist",
        "source": {
            "css": "src/assets/css",
            "app": "src/asadmin",
            "assets": "src/assets",
            "demo": "src-demo"
        },
        "target": {
            "css": "dist",
            "app": "dist",
            "assets": "dist",
            "fonts": "dist/fonts",
            "demo": "demo"
        },
        "demo": {
            "assets": "demo/assets",
            "app": "demo/app",
            "asadmin": "demo/vendor/asadmin"
        }
    },
    "context": {
        "build": {
            "clean": false,
            "task-dir": "tasks",
            "task": {
                "build/concat": true,
                "build/style": true,
                "copy/html": true,
                "copy/assets": true,
                "vendor/copy": true
            }
        },
        "demo": {
            "default": true,
            "clean": false,
            "from-target-context": "build",
            "task-dir": "tasks",
            "task": {
                "demo/asadmin": true,
                "demo/app": true,
                "demo/html": true,
                "demo/other": true
            }
        }
    }
}
